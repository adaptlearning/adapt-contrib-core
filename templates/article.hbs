{{! make the _globals object in course.json available to this template}}
{{import_globals}}

<div class="article__inner">

  {{#any displayTitle body instruction}}
  <div class="article__header">
    <div class="article__header-inner">

      {{#if priorityLabel}}
      <div class="article__priority {{priorityClass}}">
        <span class="icon" aria-hidden="true"></span>
        <div class="article__priority-label">
          {{{compile priorityLabel}}}
        </div>
      </div>
      {{/if}}

      {{#if displayTitle}}
      <div class="article__title">
        <div class="article__title-inner js-heading"></div>
      </div>
      {{/if}}

      {{#if body}}
      <div class="article__body">
        <div class="article__body-inner">
          {{{compile body}}}
        </div>
      </div>
      {{/if}}

      {{#if instruction}}
      <div class="article__instruction">
        <div class="article__instruction-inner">
          {{{compile instruction}}}
        </div>
      </div>
      {{/if}}

    </div>
  </div>
  {{/any}}

  <div class="block__container">
    {{!-- Blocks render here --}}
  </div>

</div>
