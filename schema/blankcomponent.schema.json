{
  "$anchor": "component",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "content"
    },
    "with": {
      "required": [
        "_component"
      ],
      "properties": {
        "_component": {
          "type": "string",
          "title": "Component"
        },
        "_layout": {
          "type": "string",
          "title": "Layout",
          "default": ""
        },
        "_disableAccessibilityState": {
          "type": "boolean",
          "title": "Disable completion ARIA label",
          "description": "Controls whether the user can tab to a hidden label that describes the completion state of the component",
          "default": false,
          "_adapt": {
            "isSetting": true
          }
        },
        "properties": {
          "type": "object",
          "title": "Properties",
          "default": {}
        }
      }
    }
  }
}
